.search-layout{
    display: flex;
    padding:20rpx 30rpx;
    background:#f3f2f5;
    align-items: center;
}
.des-city{
    font-size:16px;
    height: 60rpx;
    line-height: 60rpx;
    padding-right: 20rpx;
}
.des-city-txt{
    padding-right:8rpx;
}
.des-city-dwn{
    display: inline-block;
    width: 16rpx;
    height: 16rpx;
    border-bottom: 1px solid #999;
    border-right: 1px solid #999;
    transform: rotate(45deg);
    transform-origin: 100% center;
}
.search{
    flex:1;
    background: #FFF;
    border: 1px solid #e8e8e8;
    border-radius: 4rpx;
    display: flex;
    align-items: center;
}
.sch-v{
    flex:1;
    position: relative;
}
.sch-v wx-view{
    position: absolute;
    left:0;
    top:0;
    width:100%;
    height: 100%;
    z-index: 100;
}
.search-icon{
    padding-left:10rpx;
    padding-right:6rpx;
}
.search-input{
    font-size:12px;
    flex:1;
    height: 60rpx;
}
.clear-icon{
    margin-right: 6rpx;
}
.cancel-search{
    color:#23cc77;
    font-size:14px;
    height: 60rpx;
    line-height: 60rpx;
    margin-left:30rpx;
}